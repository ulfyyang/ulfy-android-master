<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="240dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_upgrade_background"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="130dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:scrollbars="none">

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本文本" />

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <com.ulfy.android.views.ShapeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="1dp"
                app:layout_shape="rect"
                app:rect_radius="10dp"
                app:shape_background="#a9a9a9">

                <TextView
                    android:id="@+id/confirmOnlineTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="在线更新"
                    android:textSize="18sp" />

            </com.ulfy.android.views.ShapeLayout>

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <com.ulfy.android.views.ShapeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:layout_shape="rect"
                app:rect_radius="10dp">

                <TextView
                    android:id="@+id/confirmWebsiteTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3c8ce7"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="下载更新"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </com.ulfy.android.views.ShapeLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>