<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:id="@+id/loadDataTV"
        style="@style/TipButton"
        android:text="普通数据刷新：SmartLoadDataActivity" />

    <TextView
        android:id="@+id/loadListPageTV"
        style="@style/TipButton"
        android:layout_marginTop="2dp"
        android:text="分页数据刷新：SmartLoadListPageActivity" />

    <TextView
        android:id="@+id/customHeaderTV"
        style="@style/TipButton"
        android:layout_marginTop="2dp"
        android:text="定制刷新头：SmartCustomHeaderActivity" />

</LinearLayout>