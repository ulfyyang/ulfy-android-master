<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <com.ulfy.android.views.FlowLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        app:child_margin="2dp">

        <TextView
            android:id="@+id/loadDataTV"
            style="@style/TipButton"
            android:text="普通数据刷新:SmartLoadDataActivity" />

        <TextView
            android:id="@+id/loadListPageTV"
            style="@style/TipButton"
            android:text="分页数据刷新:SmartLoadListPageActivity" />

    </com.ulfy.android.views.FlowLayout>

</LinearLayout>