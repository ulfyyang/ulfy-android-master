<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ulfy.android.views.RatioLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ratio_height="1080"
        app:ratio_width="1920">

        <ImageView
            android:id="@+id/coverIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="#F2F2F2" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="60dp"
                android:ellipsize="end"
                android:shadowColor="#000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="2.0"
                android:singleLine="true"
                android:text="视频名称视频名称视频名称视频名称视频名称视频名称视频名称视频名称"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_tiktok_play" />

            <TextView
                android:id="@+id/countTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="10dp"
                android:shadowColor="#000000"
                android:shadowDx="1.0"
                android:shadowDy="1.0"
                android:shadowRadius="2.0"
                android:text="106次播放"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/timeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_time_background"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:paddingRight="6dp"
                android:paddingBottom="2dp"
                android:text="03:41"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </FrameLayout>

    </com.ulfy.android.views.RatioLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="6dp"
        android:paddingRight="10dp"
        android:paddingBottom="6dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.ulfy.android.views.ShapeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_shape="circle">

                <ImageView
                    android:id="@+id/avatarIV"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="#F2F2F2" />

            </com.ulfy.android.views.ShapeLayout>

            <com.ulfy.android.views.ShapeLayout
                android:id="@+id/isAuthorSL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:padding="2dp"
                app:layout_shape="circle"
                app:shape_background="@color/white">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="#fdb705"
                    android:gravity="center"
                    android:text="创"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </com.ulfy.android.views.ShapeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="汤达人"
                android:textColor="#212121"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/fanCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="841粉丝"
                android:textColor="#888888"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentLL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_comment" />

            <TextView
                android:id="@+id/commentTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="0"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/shareLL"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_share" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>