<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cacheSizeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="缓存大小：0.0KB" />

    <LinearLayout
        android:id="@+id/imageContainerLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.ulfy.android.views.RatioLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:ratio_height="1"
                app:ratio_width="1">

                <ImageView
                    android:id="@+id/content1IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

            </com.ulfy.android.views.RatioLayout>

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <com.ulfy.android.views.RatioLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:ratio_height="1"
                app:ratio_width="1">

                <ImageView
                    android:id="@+id/content2IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

            </com.ulfy.android.views.RatioLayout>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.ulfy.android.views.RatioLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:ratio_height="1"
                app:ratio_width="1">

                <ImageView
                    android:id="@+id/content3IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

            </com.ulfy.android.views.RatioLayout>

            <android.support.v4.widget.Space
                android:layout_width="10dp"
                android:layout_height="0dp" />

            <com.ulfy.android.views.RatioLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:ratio_height="1"
                app:ratio_width="1">

                <ImageView
                    android:id="@+id/content4IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />

            </com.ulfy.android.views.RatioLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/previewBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="大图预览" />

    <Button
        android:id="@+id/clearCacheBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除缓存" />

</LinearLayout>