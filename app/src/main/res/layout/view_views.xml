<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shapeLayoutTV"
                style="@style/TipButton"
                android:text="形状定制：ShapeLayoutActivity" />

            <TextView
                android:id="@+id/ratioLayoutTV"
                style="@style/TipButton"
                android:text="比例布局：RatioLayoutActivity" />

            <TextView
                android:id="@+id/flowLayoutTV"
                style="@style/TipButton"
                android:text="流式布局：FlowLayoutActivity" />

            <TextView
                android:id="@+id/listViewLayoutTV"
                style="@style/TipButton"
                android:text="列表布局：ListViewLayoutActivity" />

            <TextView
                android:id="@+id/gridViewLayoutTV"
                style="@style/TipButton"
                android:text="表格布局：GridViewLayoutActivity" />

            <TextView
                android:id="@+id/fingerFollowLayoutTV"
                style="@style/TipButton"
                android:text="跟随手指移动：FingerFollowLayoutActivity" />

            <TextView
                android:id="@+id/autoScrollTV"
                style="@style/TipButton"
                android:text="横向滚动：AutoScrollActivity" />

            <TextView
                android:id="@+id/autoScrollUpTV"
                style="@style/TipButton"
                android:text="纵向滚动：AutoScrollUpActivity" />

            <TextView
                android:id="@+id/verticalViewPagerTV"
                style="@style/TipButton"
                android:text="纵向 ViewPager：VerticalViewPagerActivity" />

            <TextView
                android:id="@+id/dialogLayoutTV"
                style="@style/TipButton"
                android:text="弹窗布局：DialogLayoutActivity" />

            <TextView
                android:id="@+id/dashLineTV"
                style="@style/TipButton"
                android:text="绘制虚线：DashLineActivity" />

            <TextView
                android:id="@+id/chartViewTV"
                style="@style/TipButton"
                android:text="绘制图表：ChartViewActivity" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>